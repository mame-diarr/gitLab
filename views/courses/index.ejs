<h2>Liste des cours</h2> 
<table class="table"> 
<thead> 
<tr> 
<th>Titre</th> 
<th>Description</th> 
<th>Coût</th> 
<th>Niveau</th>
<th>Nb Max Étudiants</th> 
<th>Modifier</th> 
<th>Supprimer</th> 
    </tr> 
  </thead> 
  <tbody> 
    <% courses.forEach(course => { %> 
    <tr> 
      <td> 
        <a href="<%= `/courses/${course._id}` %>"> 
          <%= course.title %> 
        </a> 
      </td>
      <td><%= course.description %></td> 
      <td><%= course.cost %> €</td> 
      <td><%= course.maxStudents %></td> 
      <td><%= course.level%></td>
      <td> 
        <a href="<%= `/courses/${course._id}/edit` %>"> 
          Modifier 
        </a> 
      </td> 
      <td> 
        <a href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"  
           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce cours?')"> 
          Supprimer 
        </a> 
    </td> 
  </tr> 
  <% }); %> 
</tbody> 
</table> 
<a href="/courses/new" class="btn btn-primary">Créer un nouveau cours</a>