<h1>Détails du cours: <%= course.title %></h1> 
<table class="table"> 
<tr> 
<th>Titre</th> 
<td><%= course.title %></td> 
</tr> 
<tr> 
<th>Description</th> 
<td><%= course.description %></td> 
</tr> 
<tr> 
<th>Nombre maximum d'étudiants</th> 
<td><%= course.maxStudents %></td> 
</tr> 
<tr> 
<th>Coût</th> 
<td><%= course.cost %> €</td> 
</tr> 
</table>
<% if (course.students && course.students.length > 0) { %> 
    <h3>Étudiants inscrits:</h3> 
    <ul> 
    <% course.students.forEach(student => { %> 
    <li><%= student.fullName %> (<%= student.email %>)</li> 
    <% }); %> 
    </ul> 
    <% } else { %> 
    <h3>Aucun étudiant inscrit pour le moment.</h3> 
    <% } %> 
    <div class="button-group"> 
    <a href="/courses" class="btn btn-primary">Tous les cours</a> 
    <a href="<%= `/courses/${course._id}/edit` %>" class="btn btn-info">Modifier</a>
    <a href="<%= `/courses/${course._id}/delete?_method=DELETE` %>"  
        onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce cours?')"  
        class="btn btn-danger"> 
        Supprimer 
        </a> 
    </div>