<% if (successMessage) { %>
    <div class="alert alert-success">
      <%= successMessage %>
    </div>
  <% } %>
  
<h2>Détails de l'abonné</h2> 
<div class="subscriber-details"> 
<h3><%= subscriber.name %></h3> 
<p><strong>Email:</strong> <%= subscriber.email %></p> 
<p><strong>Code Postal:</strong> <%= subscriber.zipCode %></p> 
</div> 
<a href="/subscribers" class="btn btn-primary">Retour à la liste</a> 
<form action="/subscribers/delete/<%= subscriber._id %>" method="POST" onsubmit="return confirm('Supprimer cet abonné ?');">
    <button type="submit" class="btn btn-danger">Supprimer</button>
 </form>
 <a href="/subscribers/edit/<%= subscriber._id %>" class="btn btn-warning">Modifier</a>
