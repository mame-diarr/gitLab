<h2>Nos Cours</h2>
<p>Découvrez notre sélection de cours d'intelligence artificielle.</p>

<form method="GET" action="/courses" class="form-group" style="margin-bottom: 2rem;">
  <label for="level">Niveau :</label>
  <select name="level" id="level">
    <option value="">-- Tous les niveaux --</option>
    <option value="Débutant">Débutant</option>
    <option value="Intermédiaire">Intermédiaire</option>
    <option value="Avancé">Avancé</option>
  </select>

  <label for="maxPrice">Prix max (€) :</label>
  <input type="number" name="maxPrice" id="maxPrice" placeholder="ex: 250" />

  <button type="submit" class="btn">Filtrer</button>
</form>
<div class="courses-container">
    <% if (courses.length > 0) { %>
      <% courses.forEach(course => { %>
        <div class="course-card">
          <h3><%= course.title %></h3>
          <p><%= course.description %></p>
          <div class="course-details">
            <span class="cost"><%= course.cost %> €</span>
            <span class="level"><%= course.level %></span>
          </div>
          <a href="/contact" class="btn">S'inscrire</a>
        </div>
      <% }); %>
    <% } else { %>
      <p>Aucun cours ne correspond à vos critères.</p>
    <% } %>
  </div>
  